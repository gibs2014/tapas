<div class="page-header">
  <h1>New Recipe Ingredient</h1>
</div>

<%= form_tag(recipe_ingredients_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :recipe_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :recipe_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :ingredient_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :ingredient_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :amount, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :amount, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :notes, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :notes, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Recipe Ingredient", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
