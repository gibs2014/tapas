<div class="page-header">
  <h1>Editing Recipe Ingredient #<%= @recipe_ingredient.id %></h1>
</div>

<%= form_tag(recipe_ingredient_url(@recipe_ingredient), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :recipe_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :recipe_id, @recipe_ingredient.recipe_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :ingredient_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :ingredient_id, @recipe_ingredient.ingredient_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :amount, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :amount, @recipe_ingredient.amount, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :notes, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :notes, @recipe_ingredient.notes, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Recipe Ingredient", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
