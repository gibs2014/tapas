<div class="page-header">
  <h1>Recipes</h1>
</div>

<p><%= link_to 'Add a New Recipe', new_recipe_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Category</th>
      <th>Quantity</th>
      <th>Calories</th>
      <th>Preparation</th>
      <th>Prep time</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= image_tag recipe.image, width:100 %></td>
        <td><%= recipe.category %></td>
        <td><%= recipe.quantity %></td>
        <td><%= recipe.calories %></td>
        <td><%= recipe.preparation %></td>
        <td><%= recipe.prep_time %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, recipe_url(recipe), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_recipe_url(recipe), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, recipe_url(recipe), method: 'delete', data: { confirm: "Do you really want to delete this recipe?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

