<div class="page-header">
  <h1>Editing Recipe #<%= @recipe.id %></h1>
</div>

<%= form_tag(recipe_url(@recipe), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :name, @recipe.name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :category, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :category, @recipe.category, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :quantity, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :quantity, @recipe.quantity, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :calories, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :calories, @recipe.calories, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :preparation, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :preparation, @recipe.preparation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :prep_time, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :prep_time, @recipe.prep_time, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Recipe", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
