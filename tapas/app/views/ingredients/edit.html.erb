<div class="page-header">
  <h1>Editing Ingredient #<%= @ingredient.id %></h1>
</div>

<%= form_tag(ingredient_url(@ingredient), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :name, @ingredient.name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :source, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :source, @ingredient.source, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :notes, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :notes, @ingredient.notes, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Ingredient", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
